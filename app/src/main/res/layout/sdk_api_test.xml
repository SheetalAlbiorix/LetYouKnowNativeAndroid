<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/padding_top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/samsung_pay_sdk_api_test"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/get_samsung_pay_status_api_test_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5dp"
                android:text="@string/get_samsung_pay_status"
                android:textAllCaps="false"
                android:theme="@style/MyButton" />

            <Button
                android:id="@+id/request_card_info_api_test_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5dp"
                android:text="@string/request_card_info"
                android:textAllCaps="false"
                android:theme="@style/MyButton" />

            <Button
                android:id="@+id/activateSamsungPay_api_test_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5dp"
                android:text="@string/activate_samsung_pay"
                android:textAllCaps="false"
                android:theme="@style/MyButton" />

            <Button
                android:id="@+id/go_to_update_page_api_test_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5dp"
                android:text="@string/go_to_update_page"
                android:textAllCaps="false"
                android:theme="@style/MyButton" />

            <include layout="@layout/category_divider" />
        </TableLayout>
    </LinearLayout>
</layout>
