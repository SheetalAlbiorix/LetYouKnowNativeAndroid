<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="lightDealBindData"
            type="com.letyouknow.model.LightDealBindData" />

        <variable
            name="ucdData"
            type="com.letyouknow.model.FindUcdDealData" />

        <variable
            name="pendingUcdData"
            type="com.letyouknow.model.SubmitPendingUcdData" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar_blue"
            app:toolbarTitle="@{@string/deal_summary}" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colord3e6ff"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_half_round"
                android:backgroundTint="?pageBgColor"
                android:orientation="vertical">

                <FrameLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivMain"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:orientation="vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_image_car">

                    </androidx.appcompat.widget.AppCompatImageView>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_margin="@dimen/_8sdp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvPerc"
                            style="@style/medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:background="@drawable/bg_round_border_blue"
                            android:gravity="center"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:text="0%"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_shadow_round_rectangle"
                            android:backgroundTint="@color/navyBlue"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_6sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_6sdp">

                            <TextView
                                android:id="@+id/tvDealGuaranteed"
                                style="@style/medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:text="Deal Guaranteed For"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvTimer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_white_border_round_rect7"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp"
                                android:text="00.00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_9sdp" />

                            <TextView
                                android:id="@+id/tvAddMin"
                                style="@style/medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:background="@drawable/bg_button3"
                                android:backgroundTint="@color/white"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp"
                                android:text="Add 2 Min"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_9sdp"
                                android:visibility="gone" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/bg_half_round"
                            android:backgroundTint="@color/offWhite" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_20sdp">

                            <FrameLayout
                                android:id="@+id/llGallery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_8sdp">

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/ivBgGallery"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:alpha="0.4"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_image_car"
                                    app:riv_border_color="@color/black"
                                    app:riv_corner_radius="@dimen/_5sdp" />

                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:padding="@dimen/_8sdp"
                                    android:src="@drawable/ic_gallery"
                                    android:text="Gallery"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/ll360"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_8sdp">

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/ivBg360"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:alpha="0.4"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_image_car"
                                    app:riv_border_color="@color/black"
                                    app:riv_corner_radius="@dimen/_5sdp" />

                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:padding="@dimen/_6sdp"
                                    android:src="@drawable/ic_360"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />
                            </FrameLayout>

                            <!--<TextView
                                style="@style/regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:gravity="end"
                                android:paddingStart="@dimen/_12sdp"
                                android:paddingEnd="@dimen/_8sdp"
                                android:singleLine="true"
                                android:text="Actual Model may vary"
                                android:textColor="@color/color545d64"
                                android:textSize="@dimen/_11sdp" />-->
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </FrameLayout>
                </FrameLayout>


                <include
                    layout="@layout/layout_unlocked_deal_summery_step2"
                    app:lcdDealData="@{ucdData}"
                    app:lightDealBindData="@{lightDealBindData}"
                    app:pendingUCDData="@{pendingUcdData}" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>