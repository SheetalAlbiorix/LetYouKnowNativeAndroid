<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="lightDealBindData"
            type="com.letyouknow.model.LightDealBindData" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colord3e6ff"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_280sdp"
                        android:background="@color/colord3e6ff"
                        android:gravity="center"
                        android:padding="@dimen/_25sdp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:background="@drawable/bg_shadow_round_rectangle"
                            android:backgroundTint="@color/navyBlue"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/_8sdp">


                            <TextView
                                style="@style/medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:text="Deal Guaranteed For"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvTimer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_white_border_round_rect7"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp"
                                android:text="00.00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_9sdp" />

                            <TextView
                                android:id="@+id/tvAddMin"
                                style="@style/medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:background="@drawable/bg_button3"
                                android:backgroundTint="@color/white"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp"
                                android:text="Add 2 Min"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_9sdp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/expandedImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_car" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/exterior_color"
                                android:textColor="@color/black"
                                android:textColorHighlight="@android:color/transparent"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:gravity="center"
                                android:text="@string/interior_color"
                                android:textColor="@color/black"
                                android:textColorHighlight="@android:color/transparent"
                                android:textSize="@dimen/_10sdp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>
                </FrameLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colord3e6ff"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_half_round"
                android:backgroundTint="?pageBgColor"
                android:orientation="vertical">


                <include
                    layout="@layout/layout_deal_summery_step2"
                    app:lightDealBindData="@{lightDealBindData}" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23sdp"
            android:visibility="gone"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="bottom|start"
            app:srcCompat="@drawable/bg_circle_shape" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ivInteriorColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_80sdp"
            android:foregroundTint="@color/lightGray"
            android:tint="@color/textLightGrey"
            android:visibility="gone"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="bottom|start"
            app:srcCompat="@drawable/bg_circle_shape" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>