<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_12sdp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/offWhite1"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="0dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_15sdp">

        <TextView
            android:id="@+id/tvVehicle"
            style="@style/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unsuccessful Match"
            android:textColor="@color/color3e5365"
            android:textSize="@dimen/_13sdp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvType"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp"
                tool:text="Cashmere" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exterior_color_colon"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvExterior"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp"
                tool:text="Cashmere" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interior_color_colon"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvInterior"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp"
                tool:text="Cashmere" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/packages_colon"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvPackages"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp"
                tool:text="Cashmere" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_amp_accessories_colon"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvOptions"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp"
                tool:text="Cashmere" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zip_code_colon"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvZipCode"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp"
                tool:text="Cashmere" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_radius_colon"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvSearchRadius"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp"
                tool:text="Cashmere" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submitted_date_colon"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvDate"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:textColor="@color/color545d64"
                android:textSize="@dimen/_12sdp"
                tool:text="Cashmere" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/tvPrice"
            style="@style/regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/colorB11D1D"
            android:textSize="@dimen/_15sdp"
            tool:text="$0.00" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSeeMore"
            style="@style/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/bg_button3"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/_30sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_30sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/see_details"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>