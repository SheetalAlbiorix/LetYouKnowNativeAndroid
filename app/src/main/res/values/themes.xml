<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LetYouKnow" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorFAFAFA</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="fontFamily">@font/roboto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Toolbar Back Button color. -->
        <item name="colorControlNormal">@color/colorPrimary</item>

        <!-- Edittext Style -->
        <item name="editTextStyle">@style/MyCustomTextInputStyle</item>
        <!-- Button Style -->
        <item name="buttonStyle">@style/ButtonStyleTextColor</item>
        <!-- Spinner Style -->
        <item name="spinnerStyle">@style/SpinnerStyle</item>

        <!-- Custom Colors -->
        <item name="blackHeaderText">@color/black</item>
        <item name="blackText">@color/gray98</item>
        <item name="lightBlackText">@color/textLightGrey</item>
        <item name="blueText">@color/lightBlue</item>

        <item name="pageBgColor">@color/offWhite</item>
        <item name="toolbarBgColor">@color/lightBlue</item>
        <item name="toolbarTitleColor">@color/lightBlue</item>
        <item name="editBgColor">@color/offWhite</item>
        <item name="editHintColor">@color/lightBlue</item>
        <item name="editBorderColor">@color/lightBlue</item>
        <item name="editTextColor">@color/lightBlue</item>
        <item name="textColor">@color/lightBlue</item>
        <item name="linkTextColor">@color/lightBlue</item>
        <item name="buttonColor">@color/lightBlue</item>
        <item name="buttonTextColor">@color/lightBlue</item>
        <item name="textGreyColor">@color/textGray</item>
        <item name="textDarkColor">@color/textDarkGrey</item>
        <item name="orangeText">@color/orange</item>
    </style>

    <style name="MyCustomTextInputStyle" parent="@android:style/Widget.EditText">
<!--        <item name="android:background">@drawable/bg_edittext</item>-->
        <item name="android:textColorHint">@color/gray98</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:paddingBottom">@dimen/_16sdp</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>


    <style name="ButtonStyleTextColor" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="android:height">@dimen/_30sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="SpinnerStyle" parent="@android:style/Widget.Spinner">
        <!--<item name="android:background">@drawable/bg_edittext</item>-->
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:drawableEnd">@drawable/ic_lock</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
    </style>

    <style name="medium">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="bold">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="regular">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="thin">
        <item name="fontFamily">@font/roboto_thin</item>
    </style>

    <style name="light">
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="italic">
        <item name="fontFamily">@font/roboto_black_italic</item>
    </style>

    <style name="thinItalic">
        <item name="fontFamily">@font/roboto_thin_italic</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="textColor">@color/black</item>
    </style>

    <style name="theme.switch" parent="TextAppearance.AppCompat.Widget.Switch">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="tickColorActive">@color/colorPrimary</item>
        <item name="tickColorInactive">@color/black</item>

    </style>

    <style name="spinnerStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="Stripe.CardInputWidget.EditText" parent="Stripe.Base.CardInputWidget.EditText">
        <item name="android:textColorHint">#808080</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/color545d64</item>
        <item name="fontFamily">@font/roboto_medium</item>

    </style>

</resources>